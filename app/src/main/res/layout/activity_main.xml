<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bright_foreground_material_light"
    >
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/view"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="false" />

    <TableRow>

        <TextView
            android:paddingRight="20dp" />

    </TableRow>
    <TableRow>

        <TextView
            android:paddingRight="20dp" />

    </TableRow>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textColor="@color/background_floating_material_light"
        android:id="@+id/buttonHunters"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="CaÃ§adores"
        android:textStyle="bold"
        android:onClick="onClickCacadores"
        android:background="@drawable/buttonshape"
        android:fontFamily="times new roman"
        />

    <TableRow>

        <TextView
            android:paddingRight="20dp" />

    </TableRow>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textColor="@color/background_floating_material_light"
        android:id="@+id/buttonClasses"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Classes"
        android:textStyle="bold"
        android:onClick="onClickCacadores"
        android:background="@drawable/buttonshape"
        android:fontFamily="times new roman"
        />

    <TableRow
        android:id="@+id/tableRow1">

        <TextView
            android:id="@+id/textView1"
            android:paddingRight="20dp" />

    </TableRow>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textColor="@color/background_floating_material_light"
        android:id="@+id/buttonMonsters"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Monstros"
        android:textStyle="bold"
        android:onClick="onClickCacadores"
        android:background="@drawable/buttonshape"
        />

    <TableRow>

        <TextView
            android:paddingRight="20dp" />

    </TableRow>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textColor="@color/background_floating_material_light"
        android:id="@+id/beahero"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Seja um Heroi"
        android:textStyle="bold"
        android:onClick="onClickCacadores"
        android:background="@drawable/buttonshape"
        />

    <TableRow>

        <TextView
            android:paddingRight="20dp" />

    </TableRow>

    <TableRow>

        <TextView
            android:paddingRight="20dp" />

    </TableRow>


</TableLayout>
</ScrollView>