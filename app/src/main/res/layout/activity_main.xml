<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/view"
    tools:context="com.gbardeli.evolvedatabase.MainActivity"
    >

    <ImageView
        android:paddingTop="-5dp"
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:id="@+id/imageView"
        android:layout_column="0"
        android:src="@drawable/evolve" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CaÃ§adores"
        android:id="@+id/cacadores"
        android:textSize="26dp"
        android:textColor="@color/red"
        android:background="@drawable/buttonshape"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickCacadores"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monstros"
        android:id="@+id/monstros"
        android:textSize="26dp"
        android:textColor="@color/red"
        android:background="@drawable/buttonshape"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/cacadores"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickMonstros"/>


</RelativeLayout>
